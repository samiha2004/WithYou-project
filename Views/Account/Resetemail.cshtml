@model WithYou_project.Database.Entities.Resetemail
@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WithYou - إعادة تعيين كلمة المرور</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/resetemail.css">
</head>

<body>
    <div class="reset-container">
        <!-- الجانب الأيسر (الرسوم) -->
        <div class="reset-hero">
            <div class="reset-hero-content">
                <h1>نسيت كلمة المرور؟</h1>
                <p>لا تقلق، سنساعدك في استعادة الوصول إلى حسابك في منصة WithYou للرعاية النفسية</p>
            </div>
        </div>

        <!-- الجانب الأيمن (النموذج) -->
        <div class="reset-form-container">
            <h2 class="form-title">إعادة تعيين كلمة المرور</h2>
            <p class="form-subtitle">أدخل بريدك الإلكتروني وسنرسل لك رابطًا لإعادة تعيين كلمة المرور</p>

            <div class="form-alert alert-info">
                <i class="fas fa-info-circle"></i>
                سيتم إرسال رابط إعادة التعيين إلى بريدك الإلكتروني، صالح لمدة 24 ساعة فقط
            </div>

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder=" " />
                    <label asp-for="Email" class="floating-label">البريد الإلكتروني المسجل</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">إرسال رابط التعيين</button>
            </form>

            <div class="back-to-login">
                تذكرت كلمة المرور؟ <a asp-controller="Account" asp-action="Login">العودة لتسجيل الدخول</a>
            </div>
        </div>
    </div>

    <script src="~/js/resetemail.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
